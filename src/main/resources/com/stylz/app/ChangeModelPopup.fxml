<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.geometry.*?>

<AnchorPane fx:id="popupRoot"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.stylz.app.ChangeModelPopupController"
            AnchorPane.topAnchor="0"
            AnchorPane.leftAnchor="0"
            AnchorPane.rightAnchor="0"
            AnchorPane.bottomAnchor="0">

    <!-- FULL SCREEN DARK OVERLAY -->
    <Rectangle fx:id="dimBackground"
               style="-fx-fill: rgba(0,0,0,0.45);"
               AnchorPane.topAnchor="0"
               AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0"
               AnchorPane.bottomAnchor="0" />

    <!-- CENTER CONTAINER -->
    <StackPane AnchorPane.topAnchor="0"
               AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0"
               AnchorPane.bottomAnchor="0">

        <!-- POPUP BOX -->
        <VBox fx:id="popupBox"
              alignment="CENTER"
              spacing="20"
              maxWidth="360"
              maxHeight="280"
              VBox.vgrow="NEVER"
              style="-fx-background-color: white;
             -fx-background-radius: 18;
             -fx-padding: 25;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 25, 0.1, 0, 4);">


        <Label text="Change Model?"
                   style="-fx-font-size: 26px; -fx-font-weight: bold;" />

            <Label text="Changing the model will reset your outfit."
                   wrapText="true"
                   style="-fx-font-size: 16px; -fx-text-fill: #444;" />

            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="yesBtn" text="Yes"
                        prefWidth="135" prefHeight="45"
                        style="-fx-background-color: #ff85c2;
                               -fx-text-fill: white;
                               -fx-font-size: 18px;
                               -fx-background-radius: 10;" />

                <Button fx:id="cancelBtn" text="Cancel"
                        prefWidth="135" prefHeight="45"
                        style="-fx-background-color: #cccccc;
                               -fx-text-fill: black;
                               -fx-font-size: 18px;
                               -fx-background-radius: 10;" />
            </HBox>

        </VBox>
    </StackPane>

</AnchorPane>
