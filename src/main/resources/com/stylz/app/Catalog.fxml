<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="600.0" prefWidth="800"
           styleClass="catalog-screen"
           stylesheets="@../../../styles.css"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.stylz.app.CatalogController">

    <!-- Blue Catalog Box -->
    <VBox alignment="TOP_CENTER" spacing="30" maxWidth="900" maxHeight="550"
          style="-fx-background-color: #C1E1FF;
                 -fx-background-radius: 20;
                 -fx-padding: 30;
                 -fx-border-color: #F8F4FF;
                 -fx-border-width: 8;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 2, 4);">

        <!-- Top Navigation Bar -->
        <HBox spacing="20" alignment="CENTER">

            <Button text="Log out"
                    styleClass="catalog-buttons"
                    onAction="#handleLogout"/>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Title Image with <image> wrapper -->
            <ImageView fitWidth="300" preserveRatio="true">
                <image>
                    <Image url="@/images/catalog-image.png"/>
                </image>
            </ImageView>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Home"
                    styleClass="catalog-buttons"
                    onAction="#handleHome"/>
        </HBox>

        <!-- Photo Cards -->
        <HBox spacing="50" alignment="CENTER">

            <!-- Purple Polaroid -->
            <VBox alignment="TOP_CENTER"
                  onMouseClicked="#handlePhotoClick"
                  userData="purple"
                  style="-fx-cursor: hand;">

                <ImageView fitWidth="215" fitHeight="250" preserveRatio="true"
                           style="-fx-rotate: -8;">
                    <image>
                        <Image url="@/images/purple-polaroid1.png"/>
                    </image>
                </ImageView>
            </VBox>

            <!-- Green Polaroid -->
            <VBox alignment="TOP_CENTER"
                  onMouseClicked="#handlePhotoClick"
                  userData="green"
                  style="-fx-cursor: hand;">

                <ImageView fitWidth="215" fitHeight="250" preserveRatio="true"
                           style="-fx-rotate: 3;">
                    <image>
                        <Image url="@/images/green-polaroid2.png"/>
                    </image>
                </ImageView>
            </VBox>

            <!-- Yellow Polaroid -->
            <VBox alignment="TOP_CENTER"
                  onMouseClicked="#handlePhotoClick"
                  userData="yellow"
                  style="-fx-cursor: hand;">

                <ImageView fitWidth="215" fitHeight="250" preserveRatio="true"
                           style="-fx-rotate: -5;">
                    <image>
                        <Image url="@/images/yellow-polaroid3.png"/>
                    </image>
                </ImageView>
            </VBox>

        </HBox>

        <!-- Go Back Link -->
        <Label text="&lt;&lt;&lt; Go Back"
               styleClass="catalog-back-button"
               onMouseClicked="#handleGoBack"/>
    </VBox>
</StackPane>