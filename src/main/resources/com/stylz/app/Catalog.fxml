<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="600.0" prefWidth="800"
           styleClass="catalog-screen"
           stylesheets="@../../../styles.css"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.stylz.app.CatalogController">

    <VBox alignment="TOP_CENTER" spacing="30" maxWidth="900" maxHeight="550"
          style="-fx-background-color: #C1E1FF;
                 -fx-background-radius: 20;
                 -fx-padding: 30;
                 -fx-border-color: #F8F4FF;
                 -fx-border-width: 8;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 2, 4);">

        <!-- Top Navigation Bar -->
        <HBox spacing="20" alignment="CENTER">

            <Button text="Log out"
                    styleClass="catalog-buttons"
                    onAction="#handleLogout"/>

            <Region HBox.hgrow="ALWAYS"/>

            <ImageView fitWidth="300" preserveRatio="true">
                <image>
                    <Image url="@/images/catalog-image.png"/>
                </image>
            </ImageView>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Home"
                    styleClass="catalog-buttons"
                    onAction="#handleHome"/>
        </HBox>


        <!-- OUTFIT ROW (with white cards around each outfit) -->
        <HBox alignment="CENTER" spacing="25" maxWidth="800">

            <!-- CARD 1 -->
            <VBox alignment="CENTER" spacing="10"
                  style="-fx-background-color: white;
                         -fx-background-radius: 15;
                         -fx-padding: 20;
                         -fx-border-radius: 15;
                         -fx-border-color: #dddddd;"
                  prefWidth="220" prefHeight="350">
                <VBox fx:id="purpleCard" alignment="CENTER" />
            </VBox>

            <!-- CARD 2 -->
            <VBox alignment="CENTER" spacing="10"
                  style="-fx-background-color: white;
                         -fx-background-radius: 15;
                         -fx-padding: 20;
                         -fx-border-radius: 15;
                         -fx-border-color: #dddddd;"
                  prefWidth="220" prefHeight="350">
                <VBox fx:id="greenCard" alignment="CENTER" />
            </VBox>

            <!-- CARD 3 -->
            <VBox alignment="CENTER" spacing="10"
                  style="-fx-background-color: white;
                         -fx-background-radius: 15;
                         -fx-padding: 20;
                         -fx-border-radius: 15;
                         -fx-border-color: #dddddd;"
                  prefWidth="220" prefHeight="350">
                <VBox fx:id="yellowCard" alignment="CENTER" />
            </VBox>

        </HBox>


        <!-- Go Back Link -->
        <Label text="&lt;&lt;&lt; Go Back"
               styleClass="catalog-back-button"
               onMouseClicked="#handleGoBack"/>
    </VBox>
</StackPane>
