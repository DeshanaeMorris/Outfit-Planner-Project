<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="600.0" prefWidth="800"
           styleClass="catalog-screen"
           stylesheets="@../../../styles.css"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.stylz.app.CatalogController">

    <!-- Blue Catalog Box -->
    <VBox alignment="TOP_CENTER" spacing="30" maxWidth="900" maxHeight="550"
          style="-fx-background-color: #C1E1FF;
                 -fx-background-radius: 20;
                 -fx-padding: 30;
                 -fx-border-color: #F8F4FF;
                 -fx-border-width: 8;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 2, 4);">

        <!-- Top Navigation Bar -->
        <HBox spacing="20" alignment="CENTER">

            <Button text="Log out"
                    styleClass="catalog-buttons"
                    onAction="#handleLogout"/>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Title Image with <image> wrapper -->
            <ImageView fitWidth="300" preserveRatio="true">
                <image>
                    <Image url="@/images/catalog-image.png"/>
                </image>
            </ImageView>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Home"
                    styleClass="catalog-buttons"
                    onAction="#handleHome"/>
        </HBox>


        <!-- Outfit row -->
        <HBox alignment="CENTER"
              spacing="30"
              maxWidth="700">

            <StackPane>
                <!-- Polaroid Frame -->
                <VBox alignment="CENTER"
                      style="-fx-background-color: white;
                                 -fx-padding: 15;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 2, 3);"
                      rotate="-8">

                    <!-- Colored background with oval -->
                    <StackPane prefWidth="200" prefHeight="240"
                               style="-fx-background-color: #B39DDB;">

                        <!-- White oval for outfit -->
                        <Region prefWidth="160" prefHeight="220"
                                style="-fx-background-color: white;
                                -fx-background-radius: 80px;"/>

                        <VBox fx:id="purpleCard"
                              alignment="CENTER"
                              prefWidth="240"/>
                    </StackPane>
                </VBox>

                <ImageView fitWidth="30" fitHeight="30" preserveRatio="true" translateY="-135">
                    <image>
                        <Image url="@/images/pushpin.png"/>
                    </image>
                </ImageView>
            </StackPane>

            <!-- Green Polaroid Card -->
            <StackPane>
                <!-- Polaroid Frame -->
                <VBox alignment="CENTER"
                      style="-fx-background-color: white;
                                 -fx-padding: 15;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 2, 3);"
                      rotate="3">

                    <!-- Colored background with oval -->
                    <StackPane prefWidth="200" prefHeight="240"
                               style="-fx-background-color: #4DB6AC;">

                    <!-- White oval for outfit -->
                    <Region prefWidth="160" prefHeight="220"
                            style="-fx-background-color: white;
                                               -fx-background-radius: 80px;"/>
                    <VBox fx:id="greenCard"
                          alignment="CENTER"
                          prefWidth="240"/>
                    </StackPane>
                </VBox>

                <ImageView fitWidth="30" fitHeight="30" preserveRatio="true" translateY="-135">
                    <image>
                        <Image url="@/images/pushpin.png"/>
                    </image>
                </ImageView>
            </StackPane>

            <!-- Yellow Polaroid Card -->
            <StackPane>
                <!-- Polaroid Frame -->
                <VBox alignment="CENTER"
                      style="-fx-background-color: white;
                                 -fx-padding: 15;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 2, 3);"
                      rotate="-5">

                    <!-- Colored background with oval -->
                    <StackPane prefWidth="200" prefHeight="240"
                               style="-fx-background-color: #FFD54F;">

                    <!-- White oval for outfit -->
                    <Region prefWidth="160" prefHeight="220"
                            style="-fx-background-color: white;
                                               -fx-background-radius: 80px;"/>

                    <VBox fx:id="yellowCard"
                          alignment="CENTER"
                          prefWidth="240"/>
                    </StackPane>
                </VBox>

                <ImageView fitWidth="30" fitHeight="30" preserveRatio="true" translateY="-135">
                    <image>
                        <Image url="@/images/pushpin.png"/>
                    </image>
                </ImageView>
            </StackPane>

        </HBox>

        <!-- Go Back Link -->
        <Label text="&lt;&lt;&lt; Go Back"
               styleClass="catalog-back-button"
               onMouseClicked="#handleGoBack"/>
    </VBox>
</StackPane>