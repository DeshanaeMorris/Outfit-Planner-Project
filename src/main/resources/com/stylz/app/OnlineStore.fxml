<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.stylz.app.OnlineStoreController"
            prefWidth="900" prefHeight="650">

    <!-- HEADER -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color:#6F4FF2;">
            <padding><Insets top="15" bottom="15" left="18" right="18"/></padding>

            <Label text="â€¹ Back" style="-fx-font-size:22; -fx-text-fill:white;"
                   onMouseClicked="#handleBack"/>

            <Pane HBox.hgrow="ALWAYS"/>

            <Label text="Balance: $100.00"
                   style="-fx-text-fill:white; -fx-font-size:18;"/>
        </HBox>
    </top>

    <!-- MAIN STORE LAYOUT -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
            <VBox spacing="30" alignment="TOP_CENTER" prefWidth="900">
                <padding>
                    <Insets top="30" bottom="30" left="30" right="30"/>
                </padding>

                <!-- TOPS -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Tops" style="-fx-font-size:22; -fx-font-weight:bold;"/>

                    <HBox spacing="20" alignment="CENTER">
                        <ImageView fitWidth="130" fitHeight="130" onMouseClicked="#selectWhiteTop">
                            <Image url="@/images/DisplayTop1.PNG"/>
                        </ImageView>
                    </HBox>
                </VBox>

                <!-- BOTTOMS -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Bottoms" style="-fx-font-size:22; -fx-font-weight:bold;"/>

                    <HBox spacing="20" alignment="CENTER">
                        <ImageView fitWidth="130" fitHeight="130" onMouseClicked="#selectBlueShorts">
                            <Image url="@/images/Bottom1-pic.png"/>
                        </ImageView>
                    </HBox>
                </VBox>

                <!-- SHOES + DRESS -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Shoes / Dress" style="-fx-font-size:22; -fx-font-weight:bold;"/>

                    <HBox spacing="20" alignment="CENTER">
                        <ImageView fitWidth="130" fitHeight="130" onMouseClicked="#selectBlackHeels">
                            <Image url="@/images/Shoes1-pic.png"/>
                        </ImageView>
                        <ImageView fitWidth="130" fitHeight="130" onMouseClicked="#selectWhiteDress">
                            <Image url="@/images/DisplayDress.PNG"/>
                        </ImageView>
                    </HBox>
                </VBox>

                <!-- ACCESSORIES -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Accessories" style="-fx-font-size:22; -fx-font-weight:bold;"/>

                    <HBox spacing="20" alignment="CENTER">
                        <ImageView fitWidth="130" fitHeight="130" onMouseClicked="#selectHat">
                            <Image url="@/images/DisplayHat2.PNG"/>
                        </ImageView>
                        <ImageView fitWidth="130" fitHeight="130" onMouseClicked="#selectBag">
                            <Image url="@/images/DisplayBag1.PNG"/>
                        </ImageView>
                        <ImageView fitWidth="130" fitHeight="130" onMouseClicked="#selectJewelry">
                            <Image url="@/images/DisplayJewelry1.png"/>
                        </ImageView>
                        <ImageView fitWidth="130" fitHeight="130" onMouseClicked="#selectSunglasses">
                            <Image url="@/images/DisplayGlasses1.PNG"/>
                        </ImageView>
                    </HBox>
                </VBox>

                <!-- CHECKOUT SECTION -->
                <VBox spacing="10" alignment="TOP_CENTER">
                    <Label text="Cart" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

                    <ListView fx:id="cartList" prefWidth="200" prefHeight="300" />

                    <Label text="Total" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <Label fx:id="totalPrice" text="0" style="-fx-font-size: 22px; -fx-font-weight: bold;" />

                    <Button text="Checkout" onAction="#handleCheckout" />
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>