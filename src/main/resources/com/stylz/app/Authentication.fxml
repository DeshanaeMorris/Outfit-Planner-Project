<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.stylz.app.AuthenticationController"
            stylesheets="@styles.css"
            styleClass="login-screen"
            prefHeight="600.0" prefWidth="400.0">

    <!-- Centered Authentication Box -->
    <VBox alignment="TOP_CENTER" spacing="20"
          style="-fx-background-color: #f7f3b0; -fx-background-radius: 20; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 2, 4);"
          AnchorPane.topAnchor="120.0"
          AnchorPane.leftAnchor="95.0"
          AnchorPane.rightAnchor="95.0">

        <!-- Use a wrapper HBox to center VBox horizontally -->
        <HBox alignment="CENTER">
            <VBox alignment="TOP_CENTER" spacing="20">
                <!-- Title Image -->
                <ImageView fitWidth="150" preserveRatio="true">
                    <image>
                        <Image url="@/images/Authentication.png"/>
                    </image>
                </ImageView>

                <!-- User Icon Image -->
                <ImageView fitWidth="55" fitHeight="55" preserveRatio="true">
                    <image>
                        <Image url="@/images/user-icon.png"/>
                    </image>
                </ImageView>

                <!-- Message -->
                <Label text="Check your email for link to reset"
                       style="-fx-font-size: 14px; -fx-text-fill: #4b4453; -fx-wrap-text: true; -fx-text-alignment: center;"
                       maxWidth="130"/>

                <!-- Continue Button -->
                <Button text="Continue >" styleClass="create-account-button"
                        prefWidth="130" prefHeight="30"
                        onAction="#handleContinue"/>

                <!-- Go Back Link -->
                <Label text="&lt;&lt;&lt; Go Back"
                       style="-fx-text-fill: #4b4453; -fx-font-size: 10px; -fx-cursor: hand; -fx-underline: true;"
                       onMouseClicked="#handleGoBack"/>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>