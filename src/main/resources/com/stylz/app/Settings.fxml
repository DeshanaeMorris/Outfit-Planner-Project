<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.stylz.app.SettingsController"
           stylesheets="@../../../styles.css"
           styleClass="settings-screen"
           prefHeight="600.0" prefWidth="400.0">

    <!-- Yellow Settings Box (Centered) -->
    <VBox alignment="TOP_CENTER" spacing="20" maxWidth="300" maxHeight="480"
          style="-fx-background-color: #f7f3b0;
                 -fx-background-radius: 20;
                 -fx-padding: 30;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 2, 4);">

        <!-- Settings Heading Image -->
        <ImageView fitWidth="180" preserveRatio="true">
            <image>
                <Image url="@/images/settings-heading.png"/>
            </image>
        </ImageView>

        <!-- Music and Sounds Buttons -->
        <HBox spacing="40" alignment="CENTER">
            <VBox alignment="CENTER" spacing="10">
                <Button styleClass="icon-button" prefWidth="80" prefHeight="80" onAction="#handleMusic">
                    <graphic>
                        <ImageView fx:id="musicImage" fitWidth="50" fitHeight="50">
                            <image>
                                <Image url="@/images/music.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Label text="Music" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #C4A484;"/>
            </VBox>

            <VBox alignment="CENTER" spacing="10">
                <Button styleClass="icon-button" prefWidth="80" prefHeight="80" onAction="#handleSounds">
                    <graphic>
                        <ImageView fx:id="soundsImage" fitWidth="50" fitHeight="50">
                            <image>
                                <Image url="@/images/sounds.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Label text="Sounds" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #C4A484;"/>
            </VBox>
        </HBox>

        <!-- Main Buttons -->
        <Button text="Home" styleClass="settings-button"
                prefWidth="250" prefHeight="50"
                onAction="#handleHome"
                style="-fx-text-fill: white;"/>
        <Button text="Instructions" styleClass="settings-button"
                prefWidth="250" prefHeight="50"
                onAction="#handleInstructions"
                style="-fx-text-fill: white;"/>
        <Button text="&lt;&lt;&lt; Go Back" styleClass="settings-button"
                prefWidth="250" prefHeight="50"
                onAction="#handleGoBack"
                style="-fx-text-fill: white;"/>
        <Button text="Log out" styleClass="logout-button"
                prefWidth="150" prefHeight="40"
                onAction="#handleLogout"
                style="-fx-text-fill: white;"/>

    </VBox>

</StackPane>
