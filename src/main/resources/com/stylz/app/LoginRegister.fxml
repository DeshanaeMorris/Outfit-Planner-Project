<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.stylz.app.LoginRegisterController"
           stylesheets="@../../../styles.css"
           prefHeight="600.0" prefWidth="400.0"
           style="-fx-background-image: url('/images/LoginBackground1.jpg'); -fx-background-size: cover; -fx-background-position: center; -fx-background-repeat: no-repeat;">

    <!-- Center everything -->
    <VBox alignment="CENTER" spacing="40">

        <!-- Welcome Title -->
        <Label text="Welcome to STYLZ!"
               style="-fx-font-size: 27px; -fx-font-weight: bolder; -fx-text-fill: #ffffff; -fx-font-family: 'Verdana Bold', sans-serif;"/>

        <!-- Subtitle -->
        <Label text="Please choose an option to continue"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #ffffff;"/>

        <!-- Buttons -->
        <VBox spacing="20" alignment="CENTER">
            <!-- Register Button -->
            <Button text="Register" styleClass="button"
                    prefWidth="150" prefHeight="50"
                    onAction="#handleRegister"/>

            <!-- Login Button -->
            <Button text="Log In" styleClass="button"
                    prefWidth="150" prefHeight="50"
                    onAction="#handleLogin"/>

        </VBox>

    </VBox>

</StackPane>
