<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>



<StackPane prefHeight="600.0" prefWidth="400.0"
           styleClass="login-screen"
           stylesheets="@styles.css"
           xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.stylz.app.LoginController">

    <!-- Yellow Login Box (Centered like SignUp) -->
    <VBox alignment="CENTER" spacing="15" maxWidth="250" maxHeight="420"
          style="-fx-background-color: #f7f3b0; -fx-background-radius: 20; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 2, 4);">

        <!-- USER LOGIN Title Image -->
        <ImageView fitWidth="180" preserveRatio="true">
            <Image url="@/images/login-title.png" />
        </ImageView>

        <!-- User Icon Image -->
        <ImageView fitHeight="60" fitWidth="60" preserveRatio="true">
            <Image url="@/images/user-icon.png" />
        </ImageView>

        <!-- Username Field -->
        <VBox spacing="5">
            <Label style="-fx-font-weight: bold; -fx-font-size: 12px;" text="Username" />
            <TextField fx:id="usernameField" prefWidth="200" promptText="Enter username" styleClass="signup-textfield" />
            <Hyperlink onAction="#handleForgotUsername" style="-fx-text-fill: #666; -fx-font-size: 10px; -fx-padding: 0;" text="Forgot username?" />
        </VBox>

        <!-- Password Field -->
        <VBox spacing="5">
            <Label style="-fx-font-weight: bold; -fx-font-size: 12px;" text="Password" />
            <PasswordField fx:id="passwordField" prefWidth="200" promptText="Enter password" styleClass="signup-textfield" />
            <Hyperlink onAction="#handleForgotPassword" style="-fx-text-fill: #666; -fx-font-size: 10px; -fx-padding: 0;" text="Forgot Password?" />
        </VBox>

        <!-- Message Label -->
        <Label fx:id="messageLabel"
               textFill="red"
               style="-fx-font-size: 12px; -fx-font-weight: bold;"
               text="none"
               alignment="CENTER"/>

        <!-- Login Button -->
        <Button onAction="#handleLogin" prefHeight="35" prefWidth="150" styleClass="create-account-button" text="LOGIN" />

        <!-- Sign Up Link -->
        <HBox alignment="CENTER" spacing="5">
            <Label style="-fx-font-size: 11px;" text="Don't have an account?" />
            <Hyperlink onAction="#handleGoToSignUp" style="-fx-text-fill: #9b7ac7; -fx-font-size: 11px; -fx-font-weight: bold; -fx-padding: 0;" text="Sign Up" />
        </HBox>

    </VBox>

    <!-- Exit Button -->
    <Button onAction="#handleExit" style="-fx-background-color: transparent; -fx-text-fill: brown; -fx-font-size: 14px; -fx-cursor: hand; -fx-underline: true;"
            StackPane.alignment="BOTTOM_CENTER" text="EXIT" />

</StackPane>