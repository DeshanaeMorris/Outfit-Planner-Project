<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.stylz.app.ModelSelectionController"
      alignment="CENTER" spacing="30"
      prefWidth="900" prefHeight="650"
      style="-fx-background-color: #f8d6e2;">

    <Label text="Choose Your Model"
           style="-fx-font-size: 32px; -fx-font-weight: bold;" />

    <HBox alignment="CENTER" spacing="40">

        <VBox alignment="CENTER" spacing="10" onMouseClicked="#chooseModel1" style="-fx-cursor: hand;">
            <ImageView fitWidth="120" fitHeight="400" preserveRatio="true">
                <Image url="@/images/model1-2.png" />
            </ImageView>
            <Label text="Model 1" />
        </VBox>

        <VBox alignment="CENTER" spacing="10" onMouseClicked="#chooseModel2" style="-fx-cursor: hand;">
            <ImageView fitWidth="120" fitHeight="400" preserveRatio="true">
                <Image url="@/images/model2-2.png" />
            </ImageView>
            <Label text="Model 2" />
        </VBox>

        <VBox alignment="CENTER" spacing="10" onMouseClicked="#chooseModel3" style="-fx-cursor: hand;">
            <ImageView fitWidth="120" fitHeight="400" preserveRatio="true">
                <Image url="@/images/model3-2.png" />
            </ImageView>
            <Label text="Model 3" />
        </VBox>

        <VBox alignment="CENTER" spacing="10" onMouseClicked="#chooseModel4" style="-fx-cursor: hand;">
            <ImageView fitWidth="120" fitHeight="400" preserveRatio="true">
                <Image url="@/images/model4-2.png" />
            </ImageView>
            <Label text="Model 4" />
        </VBox>

    </HBox>
</VBox>