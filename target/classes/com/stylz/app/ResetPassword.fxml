<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.stylz.app.ResetPasswordController"
           stylesheets="@styles.css"
           styleClass="login-screen"
           prefHeight="600.0" prefWidth="400.0">

    <!-- Yellow Reset Box (Centered) -->
    <VBox alignment="CENTER" spacing="15" maxWidth="210" maxHeight="300"
          style="-fx-background-color: #f7f3b0; -fx-background-radius: 20; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 2, 4);">

        <!-- Title Image -->
        <ImageView fitWidth="180" preserveRatio="true">
            <image>
                <Image url="@/images/Password.png"/>
            </image>
        </ImageView>

        <!-- User Icon Image -->
        <ImageView fitWidth="60" fitHeight="60" preserveRatio="true">
            <image>
                <Image url="@/images/user-icon.png"/>
            </image>
        </ImageView>

        <!-- Email Field -->
        <VBox spacing="8" alignment="CENTER">
            <Label text="Enter your email address"
                   style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
            <HBox alignment="CENTER_LEFT" spacing="5"
                  style="-fx-background-color: white; -fx-border-color: #4b4453; -fx-border-width: 2px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 6;">
                <Label text="ðŸ“§" style="-fx-font-size: 16px;"/>
                <TextField fx:id="emailField" promptText="Enter your e-mail..."
                           style="-fx-background-color: transparent; -fx-border-width: 0;"
                           prefWidth="140"/>
            </HBox>
        </VBox>

        <!-- Reset Button -->
        <Button text="Reset" styleClass="create-account-button"
                prefWidth="120" prefHeight="35"
                onAction="#handleReset"/>

        <!-- Go Back Link -->
        <Label text="&lt;&lt;&lt; Go Back"
               style="-fx-text-fill: brown; -fx-font-size: 11px; -fx-cursor: hand; -fx-underline: true;"
               onMouseClicked="#handleGoBack"/>
    </VBox>

</StackPane>